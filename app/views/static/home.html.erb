<% if signed_in? %>
    <body>
    <div class='username'>
      <h3>
      <%= @node.username%>
        </h3>
    </div>
    <div class='row'>
      <%= @node.info%>
    </div>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/pulse_form' %>
        </section>
      </aside>
    </div>
    <div class="span8">
    </div>
    <% if @node.pulses.any? %>
        <h4>Pulsefeed</h4>
        <ol class="pulses">
          <%= render @pulses %>
        </ol>
        <%= will_paginate @pulses %>
    <% end %>
    </body>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to Pulsefy!</h1>

  <h2>
    The World's First Social Neural Network!
  </h2>

  <%= link_to "Pulsefy!", '/pulseup', :class => "btn btn-large btn-primary" %>
      </div>
<% end %>