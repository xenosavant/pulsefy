<% if signed_in? %>
    <div class='row'>
      <%= current_node.username%>
    </div>
    <div class='row'>
      <%= current_node.email%>
      <%= current_node.info%>
    </div>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/pulse_form' %>
        </section>
      </aside>
    </div>
    <div class="span8">
    </div>
    <% if @node.pulses.any? %>
        <h3>Pulses (<%= @node.pulses.count %>)</h3>
        <ol class="pulses">
          <%= render @pulses %>
        </ol>
        <%= will_paginate @pulses %>
    <% end %>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to Pulsefy!</h1>

  <h2>
    The World's First Social Neural Network!
  </h2>

  <%= link_to "Pulsefy!", '/pulseup', :class => "btn btn-large btn-primary" %>
      </div>
<% end %>