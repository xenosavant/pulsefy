<div class = 'pulsefeed'>
 <div class = 'pulse-show-box'>
 <h3><%= @pulse.headline %></h3>
<% case @pulse.link_type %>
<%when 'video' %>
<div class = "show-container"><%= raw @pulse.embed_code %></div>
<%when 'photo' %>
    <img src = <%= raw @pulse.url %>>
<%else%>
    <a href = <%= @pulse.link %>><%= @pulse.link%></a>
<%end%>
<br><div class = 'text-wrapper'><%= @pulse.content %></div>
    <div class = 'info-container'>
      <span class = 'left-info'>
            Depth: <%= @pulse.depth %><br>
        <div class="timestamp">
          Fired <%= time_ago_in_words(@pulse.created_at) %> ago.
        </div>
      </span>
      <span class = 'rating-wrapper'>
        <%if signed_in? %>
            <% case @pulse.pulser == current_node.id %>
        <% when false %>
                <% if current_node.votes.find_by_pulse_id(@pulse.id).nil?%>
                    <%= link_to image_tag('Up.png'), cast_path(:id => pulse.id, :vote_cast => true) %>
                    <%= @pulse.reinforcements %>
                    <%= link_to image_tag('Down.png'), cast_path(:id => pulse.id, :vote_cast => false) %>
                    <%= @pulse.degradations %>
                <% else %>
                    <%= image_tag 'Up.png' %>
                    <%= @pulse.reinforcements %>
                    <%= image_tag 'Down.png' %>
                    <%= @pulse.degradations %>
                <%end%>
            <% when true %>
                <%= image_tag 'Up.png' %>
                <%= @pulse.reinforcements %>
                <%= image_tag 'Down.png' %>
                <%= @pulse.degradations %>
            <%end%>
         <%end%>
     </span>
  </div>
 </div>
</div>