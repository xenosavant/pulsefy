 <div class="headline"><%= @pulse.headline %></div>
<% case @pulse.link_type %>
<%when 'video' %>
<div class = "show-container">
<%= raw @pulse.embed_code %>
</div>
<%when 'photo' %>
    <img src = <%= raw @pulse.url %> >
<%else%>
    <a href = <%= @pulse.link %>><%= @pulse.link%></a>
<%end%>
<br><div class = 'text-container'><div class = 'content'><%= @pulse.content %></div></div></br>
<div class = 'info-container'>
  <%if !Node.find(@pulse.pulser).avatar.file.nil? %>
      <%= image_tag Node.find(@pulse.pulser).avatar_url(:thumb) %>
  <% else%>
      <%= image_tag 'default.gif' %>
  <% end %>
  <span class = 'details'>
        Pulsed by
    <%if signed_in? and @pulse.pulser == current_node.id %>
        Me
        <%else %>
        <%= Node.find(@pulse.pulser).username %>
    <%end%>
  <br><span class="tags"><%= @pulse.tags %></span></br>
         </span>
</div>
  <% if @pulse.pulse_comments.any? %>
      <h4>Comments (<%= @pulse.pulse_comments.count %>)</h4>
      <ol class="pulse_comments">
        <%= render @pulse_comments %>
      </ol>
      <%= will_paginate @pulse_comments %>
  <% end %>
        <%= render 'shared/pulse_comment_form' %>
  </div>
</div>