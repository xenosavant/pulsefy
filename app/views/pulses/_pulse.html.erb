<li>
  <div class = 'soma'>
    <%if !Node.find(pulse.pulser).avatar.file.nil? %>
        <%= image_tag Node.find(pulse.pulser).avatar_url(:thumb) %>
        <%else%>
    <%= image_tag 'default.gif' %>
    <%end%>
    <% if Node.find(pulse.pulser).outputs.include?(current_node) %>
        <div class = 'dendrite'></div>
        <div class = 'synapse'></div>
    <% end %>
    <div class = 'close-container'>
      <%= link_to image_tag('close.png', :border => 0),
                  delete_path(:id => pulse.id) %>
    </div>
    <div class = 'soma-to-axon'></div>
  </div>
<div class = 'axon-wrap'>
  <div class = 'axon'>
    <% if !pulse.headline.nil? %>
    <div class="headline">
      <%= pulse.headline %>
    </div>
    <% end %>
  <% case pulse.link_type %>
  <%when 'video' %>
      <div class ="video-container"><%= raw pulse.embed_code %></div>
  <%when 'photo' %>
      <div class ="photo-container"> <img src = <%= raw pulse.url %> ></div>
  <%else%>
      <div class ="link-container"><a href = <%= pulse.link %>><%= pulse.link%></a></div>
  <%end%>
    <div class = 'text-wrapper'>
  <%= pulse.content %>
   </div>
    <div class = 'info-container'>
      <span class = 'left-info'>
            Depth: <%= pulse.depth %><br>
           <div class="timestamp">
             Fired <%= time_ago_in_words(pulse.created_at) %> ago.
            </div>
      </span>
      <span class = 'rating-wrapper'>
        <%if signed_in? %>
            <% case pulse.pulser == current_node.id %>
        <% when false %>
                <% if current_node.votes.find_by_pulse_id(pulse.id).nil?%>
                    <%= link_to image_tag('Up.png'), cast_path(:id => pulse.id, :vote_cast => true) %>
                    <%= pulse.reinforcements %>
                    <%= link_to image_tag('Down.png'), cast_path(:id => pulse.id, :vote_cast => false) %>
                    <%= pulse.degradations %>
                <% else %>
                    <%= image_tag 'Up.png' %>
                    <%= pulse.reinforcements %>
                    <%= image_tag 'Down.png' %>
                    <%= pulse.degradations %>
                <%end%>
            <% when true %>
                <%= image_tag 'Up.png' %>
                <%= pulse.reinforcements %>
                <%= image_tag 'Down.png' %>
                <%= pulse.degradations %>
            <%end%>
        <%end%>
      </span>
      <div class="tags"><%= pulse.tags %></div>
      <div class = 'comment-box'>
        <%= link_to pluralize(pulse.pulse_comments.count, 'comment'), comment_path(:id => pulse.id) %>
   </div>
  </div>
 </div>
</div>
</li>