<div class = 'pad-block'>
  <div class = 'title-box'>
    <% case @node.avatar.file.nil? %>
    <% when false %>
        Message <%= image_tag @node.avatar_url(:nano)%>
        <% link_to @node do %>
            <%= @node.username %>
        <% end %>
     <% else %>
        Message <%= image_tag 'Q25.jpg' %>
        <% link_to @node do %>
            <%= @node.username %>
        <% end %>
    <% end %>
  </div>
</div>
<div class = 'new-mess-wrapper'>
   <%= render 'shared/message_form'%>
</div>