<li>
      <div class = 'soma-message'>
            <%case message.current_sender.avatar.file.nil? %>
               <% when true %>
                 <%= link_to message.current_sender.avatar(:micro), "/show/#{message.sender}" %>
               <%else%>
                 <%= link_to image_tag('Q50.jpg'), "/show/#{message.sender}" %>
            <%end%>
        <div class = 'soma-to-axon-message'> </div>
      </div>
      <div class = 'axon-message'>
        <div class = 'mess-wrapper'>
          <%= simple_format(message.content) %>
        </div>
      </div>
</li>