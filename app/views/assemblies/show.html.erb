<main>
<div>
  <h3><%= @assembly.title%></h3>
</div>
  <%= image_tag @assembly.avatar_url(:profile) if @assembly.avatar? %>
  <div class='info'>
    <br><%= @assembly.info%></br>
  </div>
<%= link_to 'members', members_path(:id => @assembly.id)%>
  <br>
  <% if signed_in? %>
    <% if current_node.assemblies.include?(@assembly)%>
      <% if @assembly.founder == current_node.id %>
         <%= link_to 'edit', reassemble_path(:id => @assembly.id)%>
        <% else %>
        <%= link_to 'quit', quit_path(:id => @assembly.id)%>
        <% end %>
        <% if params[:errors] %>
            <div id="error_explanation">
              <ul>
                <%params[:errors].each do |msg| %>
                    <li> <%= msg %></li>
                <% end %>
              </ul>
            </div>
        <%end%>
            <%= render 'assemblies/assembly_pulse_form'%>
      <% else %>
        <%= link_to 'join', join_path(:id => @assembly.id)%>
    <% end %>
  <% end %>
  </br>
  <% if @assembly.pulses.any? %>
      <h3>Pulsefeed</h3>
      <ol class="pulses">
        <%= render @pulses %>
      </ol>
      <%= will_paginate @pulses %>
  <% end %>
</main>