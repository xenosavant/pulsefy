<body>
    <main>
                <%= form_for(@assembly) do |f| %>
                <%= render 'shared/error_messages', :object => f.object %>

                <%= f.label :title %>
                <%= f.text_field :title %>

                <%= f.label :info %>
                <%= f.text_area :info, :size => '10x8' %>

                <div class='center'>
                <%= f.submit 'Assemble!', :class => "btn btn-large btn-primary" %>

                <% end %>
        </div>
    </main>
</body>