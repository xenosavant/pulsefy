<%= form_for(@pulse_comment) do |f| %>
    <% if params[:errors] %>
        <div id="error_explanation">
          <div class="alert alert-error">
            The form contains <%= pluralize(params[:errors].count, "error") %>.
          </div>
          <ul>
            <%params[:errors].each do |msg| %>
                <li> <%= msg %></li>
            <% end %>
          </ul>
        </div>
      <%end%>
    <div class="textarea">
      <%= f.text_area :content, :rows => 2 %>
    </div>
    <%= f.submit "Comment", :class => "btn btn-large btn-primary" %>
<% end %>