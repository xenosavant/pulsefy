<header class="navbar navbar-fixed-top navbar-inverse">
  <div class = 'head-container'>
    <div class = 'head-mar'>
      <div class="navbar-inner">
          <%= link_to "pulsefy", root_path, :id => 'logo' %>
          <nav>
            <ul class="nav pull-right">
              <% if signed_in? %>
                    <li> <a href='/'> Home </a> </li>
                    <li> <%= link_to 'Assemblies', view_path(:id => current_node.id) %></li>
                    <li> <%= link_to 'Connections', inputs_path(:id => current_node.id) %></li>
                    <li> <%= link_to inbox_path do %>
                          <i class='fa fa-small fa-envelope'></i>
                          <% if current_node.unreads != 0 and !current_node.unreads.nil?%>
                          <span class="badge badge-important"><%= current_node.unreads %></span>
                          <% end %>
                          <%end%>
                    </li>
                  <li id='fat-menu' class='dropdown'>
                    <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
                      <i class="fa fa-large fa-cog"></i></a>
                    <ul class='dropdown-menu'>
                      <li><%= link_to 'My Profile', current_node %></li>
                      <li><%= link_to 'Settings', edit_path(:id => current_node.id) %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to 'Pulse out', pulseout_path, :method => 'delete' %>
                      </li>
                    </ul>
                  </li>
              <% else %>
                  <li><%= link_to 'Pulse in', pulsein_path %></li>
                  <li><%= link_to 'Home', root_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
  </div>
</header>