<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
      <%= link_to "pulsefy", '#', :id => 'logo' %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
              <li id='fat-menu' class='dropdown'>
                <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
                  Account <b class="caret"></b></a>
                <ul class='dropdown-menu'>
                  <li><%= link_to 'My Profile', current_node %></li>
                  <li><%= link_to 'Settings', edit_path(:id => current_node.id) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to 'Pulse out', pulseout_path, :method => 'delete' %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to 'Pulse in', pulsein_path %></li>
              <li><%= link_to 'Home', root_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>