<!DOCTYPE html>
<html>
<head>
  <title>Pulsefy</title>
  <%= stylesheet_link_tag    'application', :media => 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<% if signed_in? %>
<div class = 'sidebar'>
<%= render 'layouts/sidebar' %>
</div>
<%end%>
        <% flash.each do |key, value| %>
         <div class='alert'<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
        </div>
   </body>
</html>
