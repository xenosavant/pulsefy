<!DOCTYPE html>
<html>
<head>
  <title>Pulsefy</title>
  <%= stylesheet_link_tag    'application', :media => 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<%= render 'layouts/header' %>
<body>
<%= render 'layouts/sidebar' %>
<main>
        <% flash.each do |key, value| %>
         <div class='alert'<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
</main>
     <%= render 'layouts/rightbar' %>
 </body>
</html>
