<!DOCTYPE html>
<html>
<head>
  <title>Pulsefy</title>
  <%= stylesheet_link_tag    'application', :media => 'all' %>
  <%= stylesheet_link_tag '/app/assets/stylesheets/font-awesome.min.css'%>
  <%= javascript_include_tag 'application.js' %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<%= render 'layouts/header' %>
<body>
<%if signed_in? %>
    <%= render 'layouts/tab-bar' %>
  <div class = 'background-pane'>
    <%= render 'layouts/left-pane'%>
    <%= render 'layouts/right-pane'%>
   <div class = 'inner-pulse'>
    <div class = 'mar-container'>
      <div class = 'pad-block'></div>
    <%= yield  %>
    <!--<%= debug(params) %>-->
      </div>
    </div>
  </div>
</div>
<%else%>
<%= yield  %>
<%end%>
</body>
</html>