<!DOCTYPE html>
<html>
<head>
  <title>Pulsefy</title>
  <%= stylesheet_link_tag    'application', :media => 'all' %>
  <%= javascript_include_tag 'application.js' %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<%= render 'layouts/header' %>
<body>
<%if signed_in? %>
<%= render 'layouts/sidebar' %>
<%= render 'layouts/rightbar' %>
<%= render 'layouts/tab-bar' %>
<div class = 'pulsefeed'>
  <div class = inner-pulse>
    <div class = mar-container>
    <%= yield  %>
    <!--<%= debug(params) %>-->
    <%= render 'layouts/footer' %>
    </div>
  </div>
</div>
<%else%>
<%= yield  %>
<%end%>
</body>
</html>