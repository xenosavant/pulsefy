<li>
    <%if !node.avatar.file.nil? %>
        <%= link_to image_tag(node.avatar_url(:thumb)), :action => 'show', :controller => 'nodes', :id => node.id %>
    <% else%>
        <%= link_to image_tag('default.gif'), :action => 'show', :controller => 'nodes', :id => node.id %>
    <%end%>
    <% if node.inputs.include?(current_node) || node.outputs.include?(current_node) %>
    <% end %>
            <%= link_to node.username,  :action => 'show', :controller => 'nodes', :id => node.id %>
  <% if signed_in? and current_node.admin == true and !current_node?(node) %>
      <%= link_to 'delete', node, :method => :delete, :data => {:confirm => 'You sure?'} %>
  <% end %>
</li>