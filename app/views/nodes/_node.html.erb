<li>
  <div class = 'soma'>
      <%if !node.avatar.file.nil? %>
        <%= link_to image_tag(node.avatar_url(:thumb)), :action => 'show', :controller => 'nodes' %>
      <% else%>
        <%= link_to image_tag('default.gif'), :action => 'show', :controller => 'nodes' %>
      <%end%>
    <% if node.inputs.include?(current_node) || node.outputs.include?(current_node) %>
        <div class = 'dendrite'></div>
        <div class = 'synapse'></div>
        <% end %>
  </div>
  <%= node.username %><br>
  <% if signed_in? and current_node.admin == true and !current_node?(node) %>
  <%= link_to 'delete', node, :method => :delete, :data => {:confirm => 'You sure?'} %>
  <% end %>
</li>