<!DOCTYPE html>
<html>
<div class= 'center'>
<% provide(:title, 'Pulse Up') %>
<h1>Pulse Up</h1>

    <%= form_for(@node) do |f| %>

        <%= render 'shared/error_messages', :object => f.object %>
        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <div class='center'>
        <%= f.submit 'Pulsefy!', :class => "btn btn-large btn-primary" %>
        <% end %>
        </div>
 </div>
</html>