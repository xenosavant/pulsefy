<% provide(:title, "Edit Profile") %>
<div class = 'pad-block'><div class = 'title-box'> Update Your Profile </div></div>
<% if params[:errors] %>
    <div id="error_explanation">
      <div class="alert alert-error">
        <ul>
          <%params[:errors].each do |msg| %>
              <li> <%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<%end%>
<%= form_for @node, :html => { :action => 'update', :controller => 'nodes', :id => @node.id} do |f| %>

        <%= f.label 'Name' %>
        <%= f.text_field :username %>

        <%= f.label 'Information' %>
        <%= f.text_area :info, :cols => '4' %>

      <%= f.label 'Upload a profile picture' %>
      <div class = 'input'>
        <%if !@node.avatar.file.nil? %>
            <%= image_tag @node.avatar_url(:thumb) %>
        <% else%>
            <%= image_tag 'Q100.jpg' %>
            <%end%>
        <%= f.file_field :avatar %>
      </div>
      <div class = 'button-box'>
        <%= f.submit 'Save changes', :disable_with => 'Updating...', :class => 'btn btn-large btn-primary' %>
      </div>
        <% end %>
