<% provide(:title, "Edit Profile") %>
<h3>Update Your Pulsefeed</h3>
    <%= form_for @node, :html => { :action => 'update', :controller => 'nodes', :id => @node.id} do |f| %>
        <%= render 'shared/error_messages', :object => f.object %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :info %>
        <%= f.text_area :info, :size => '20x8' %>

      <%= f.label 'upload pulsefeed picture' %>
      <div class = 'input'>
        <%if !@node.avatar.file.nil? %>
            <%= image_tag @node.avatar_url(:thumb) %>
        <% else%>
            <%= image_tag 'default.gif' %>
            <%end%>
        <%= f.file_field :avatar %>
      </div>
        <br>
      <div class = 'center'>
        <%= f.submit 'Save changes', :class => 'btn btn-large btn-primary' %>
      </div>
        </br>
        <% end %>
